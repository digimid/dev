@model bearhug.ContactsServiceReference.Contact
@{
    ViewBag.Title = "Update Contact";
}
@{string name;
  if (Model.FirstName.Length > 0 || Model.LastName.Length > 0)
  {
      name = Model.LastName + ", " + Model.FirstName;
  }
  else
  {
      name = Model.ContactID;
  }
}
<div class="row">
    <div class="small-6 columns">
        <h4 class="subheader">Update Contact</h4>
    </div>
    <div class="small-6 columns">
        @Html.ActionLink("Cancel", "Index", "Contacts", new { @class = "button tiny radius right" })
    </div>
</div>
<ul class="tabs">
    <li class="tab-title active"><a href="#contact">Current Contact Information for @name</a></li>
</ul>
<div class="tabs-content min-tabs-content">
    <div class="content active" id="contact">
        @using (Html.BeginForm("Update", "Contacts", FormMethod.Post, new { @data_abide = "" }))
        {
            <div class="row">
                <div class="small-2 columns">
                    &nbsp;
                </div>
                <div class="small-3 columns name-field">
                    <label>
                        First Name <small>required</small>
                        <input id="contact_first_name" name="contact_first_name" type="text" required="required" tabindex="1" value="@Model.FirstName" />
                    </label>
                    <small class="error">First Name is required.</small>
                </div>
                <div class="small-3 columns name-field">
                    <label>
                        Organization <small>required</small>
                        <input id="contact_organization" name="contact_organization" type="text" required="required" tabindex="5" value="@Model.Organization" />
                    </label>
                    <small class="error">Organization is required.</small>
                </div>
                <div class="small-3 columns end">
                    <label>
                        @ViewBag.message
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="small-2 columns">
                    &nbsp;
                </div>
                <div class="small-3 columns name-field">
                    <label>
                        Last Name <small>required</small>
                        <input id="contact_last_name" name="contact_last_name" type="text" required="required" tabindex="2" value="@Model.LastName" />
                    </label>
                    <small class="error">Last Name is required.</small>
                </div>
                <div class="small-3 columns end">
                    <label>
                        Address
                        <input id="contact_address_1" name="contact_address_1" type="text" tabindex="6" value="@Model.Address1" />
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="small-2 columns">
                    &nbsp;
                </div>
                <div class="small-3 columns">
                    <label>
                        Title
                        <input id="contact_title" name="contact_title" type="text" tabindex="3" value="@Model.Title" />
                    </label>
                </div>
                <div class="small-3 columns end">
                    <label>
                        Address
                        <input id="contact_address_2" name="contact_address_2" type="text" tabindex="7" value="@Model.Address2" />
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="small-2 columns">
                    &nbsp;
                </div>
                <div class="small-3 columns">
                    <label>
                        Phone
                        <input id="contact_phone" name="contact_phone" type="tel" tabindex="4" value="@Model.Phone" />
                    </label>
                </div>
                <div class="small-3 columns end">
                    <label>
                        City
                        <input id="contact_city" name="contact_city" type="text" tabindex="8" value="@Model.City" />
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="small-2 columns">
                    &nbsp;
                </div>
                <div class="small-3 columns email-field">
                    <label>
                        Email <small>can't be changed</small>
                        <input id="contact_email" name="contact_email" type="email" required="required" tabindex="-1" value="@Model.Email" readonly="" />
                    </label>
                    <small class="error">An email address is required.</small>
                </div>
                <div class="small-1 columns">
                    <label>
                        State
                        <select id="contact_state" name="contact_state" tabindex="9">
                            <option disabled="disabled" selected="selected"></option>
                            <option value="AL">AL</option>
                            <option value="AK">AK</option>
                            <option value="AZ">AZ</option>
                            <option value="AR">AR</option>
                            <option value="CA">CA</option>
                            <option value="CO">CO</option>
                            <option value="CT">CT</option>
                            <option value="DE">DE</option>
                            <option value="DC">DC</option>
                            <option value="FL">FL</option>
                            <option value="GA">GA</option>
                            <option value="HI">HI</option>
                            <option value="ID">ID</option>
                            <option value="IL">IL</option>
                            <option value="IN">IN</option>
                            <option value="IA">IA</option>
                            <option value="KS">KS</option>
                            <option value="KY">KY</option>
                            <option value="LA">LA</option>
                            <option value="ME">ME</option>
                            <option value="MD">MD</option>
                            <option value="MA">MA</option>
                            <option value="MI">MI</option>
                            <option value="MN">MN</option>
                            <option value="MS">MS</option>
                            <option value="MO">MO</option>
                            <option value="MT">MT</option>
                            <option value="NE">NE</option>
                            <option value="NV">NV</option>
                            <option value="NH">NH</option>
                            <option value="NJ">NJ</option>
                            <option value="NM">NM</option>
                            <option value="NY">NY</option>
                            <option value="NC">NC</option>
                            <option value="ND">ND</option>
                            <option value="OH">OH</option>
                            <option value="OK">OK</option>
                            <option value="OR">OR</option>
                            <option value="PA">PA</option>
                            <option value="RI">RI</option>
                            <option value="SC">SC</option>
                            <option value="SD">SD</option>
                            <option value="TN">TN</option>
                            <option value="TX">TX</option>
                            <option value="UT">UT</option>
                            <option value="VT">VT</option>
                            <option value="VA">VA</option>
                            <option value="WA">WA</option>
                            <option value="WV">WV</option>
                            <option value="WI">WI</option>
                            <option value="WY">WY</option>
                        </select>
                    </label>
                </div>
                <div class="small-2 columns end">
                    <label>
                        Zip Code
                        <input id="contact_zip" name="contact_zip" type="text" tabindex="10" value="@Model.Zip" />
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="small-8 columns">
                    <input id="contact_UID" name="contact_UID" type="hidden" value="@Model.ContactID" />
                    <button type="submit" class="button tiny radius right">Update</button>
                </div>
            </div>      
        }
    </div>
</div>
<input id="hdn_state" type="hidden" value="@Model.State" />
<script src="~/Scripts/jquery/jquery.maskedinput.js" type="text/javascript"></script>
<script>
    $(function () {
        $('.top-bar-section ul li').removeClass('active');
        $('#li-contacts').addClass('active');

        $("#contact_phone").mask("(999) 999-9999", { placeholder: " " });

        if ($('#hdn_state').val() != null) {
            if ($('#hdn_state').val().length > 0) {
                $('#contact_state option[value="' + $('#hdn_state').val() + '"]').attr('selected', 'selected');
            }
        }
    });
</script>
