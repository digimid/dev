@model bearhug.Models.MessageModel
@{
    ViewBag.Title = "Add";
}

<div class="row">
    <div class="small-6 columns">
        <h4 class="subheader">Add Patient</h4>
    </div>
    <div class="small-6 columns">
        @Html.ActionLink("Return to Patients", "Index", null, new { @class = "button tiny radius right" })
    </div>
</div>
<div>
    <div class="row">
        <div class="small-8 columns small-centered">
            @using (Html.BeginForm("AddPatient", "Patients", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <fieldset>
                    <legend>Patient Information</legend>
                    <div class="row">
                        <div class="small-6 columns">
                            <label>
                                First Name
                        <input id="patient_first_name" name="patient_first_name" type="text" placeholder="First Name" required="required" tabindex="1" />
                            </label>
                        </div>
                        <div class="small-6 columns end">
                            <label>
                                Address Line 1
                        <input id="patient_address1" name="patient_address1" type="text" placeholder="Address" tabindex="5" />
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="small-6 columns">
                            <label>
                                Last Name
                        <input id="patient_last_name" name="patient_last_name" type="text" placeholder="Last Name" required="required" tabindex="2" />
                            </label>
                        </div>
                        <div class="small-6 columns end">
                            <label>
                                Address Line 2
                        <input id="patient_address2" name="patient_address2" type="text" placeholder="Address" tabindex="6" />
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="small-6 columns">
                            <label>
                                Phone
                        <input id="patient_phone" name="patient_phone" type="tel" placeholder="Phone" tabindex="3" />
                            </label>
                        </div>
                        <div class="small-6 columns end">
                            <label>
                                City
                        <input id="patient_city" name="patient_city" type="text" placeholder="City" tabindex="7" />
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="small-6 columns">
                            <label>
                                Email
                        <input id="patient_email" name="patient_email" type="email" placeholder="test@example.com" required="required" tabindex="4" />
                            </label>
                        </div>
                        <div class="small-2 columns end">
                            <label>
                                State
                        <select id="patient_state" name="patient_state" required="required" tabindex="8">
                            <option disabled="disabled" selected="selected"></option>
                            <option value="AL">AL</option>
                            <option value="AK">AK</option>
                            <option value="AZ">AZ</option>
                            <option value="AR">AR</option>
                            <option value="CA">CA</option>
                            <option value="CO">CO</option>
                            <option value="CT">CT</option>
                            <option value="DE">DE</option>
                            <option value="DC">DC</option>
                            <option value="FL">FL</option>
                            <option value="GA">GA</option>
                            <option value="HI">HI</option>
                            <option value="ID">ID</option>
                            <option value="IL">IL</option>
                            <option value="IN">IN</option>
                            <option value="IA">IA</option>
                            <option value="KS">KS</option>
                            <option value="KY">KY</option>
                            <option value="LA">LA</option>
                            <option value="ME">ME</option>
                            <option value="MD">MD</option>
                            <option value="MA">MA</option>
                            <option value="MI">MI</option>
                            <option value="MN">MN</option>
                            <option value="MS">MS</option>
                            <option value="MO">MO</option>
                            <option value="MT">MT</option>
                            <option value="NE">NE</option>
                            <option value="NV">NV</option>
                            <option value="NH">NH</option>
                            <option value="NJ">NJ</option>
                            <option value="NM">NM</option>
                            <option value="NY">NY</option>
                            <option value="NC">NC</option>
                            <option value="ND">ND</option>
                            <option value="OH">OH</option>
                            <option value="OK">OK</option>
                            <option value="OR">OR</option>
                            <option value="PA">PA</option>
                            <option value="RI">RI</option>
                            <option value="SC">SC</option>
                            <option value="SD">SD</option>
                            <option value="TN">TN</option>
                            <option value="TX">TX</option>
                            <option value="UT">UT</option>
                            <option value="VT">VT</option>
                            <option value="VA">VA</option>
                            <option value="WA">WA</option>
                            <option value="WV">WV</option>
                            <option value="WI">WI</option>
                            <option value="WY">WY</option>
                        </select>
                            </label>
                        </div>
                        <div class="small-4 columns end">
                            <label>
                                Zip Code
                        <input id="patient_zip" name="patient_zip" type="text" placeholder="Zip" tabindex="9" />
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="small-6 columns">
                            &nbsp;
                        </div>
                        <div class="small-6 columns end">
                            <button type="submit" value="Submit" class="button tiny radius right">Save</button>
                        </div>
                    </div>
                </fieldset>        
            }
        </div>
    </div>
</div>

<div>
    <label>@Model.Message</label>
</div>

<script src="~/Scripts/jquery/jquery.maskedinput.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $('.top-bar-section ul li').removeClass('active');
        $('#li-patients').addClass('active');

        $('#patient_state').val([]);

        $("#patient_phone").mask("(999) 999-9999", { placeholder: " " });
    });
</script>


